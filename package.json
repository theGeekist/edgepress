{
  "name": "gcms",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "test": "bun test",
    "start:api": "bun apps/api-edge/src/server.js",
    "start:api:worker": "wrangler dev",
    "check:boundaries": "bun scripts/check-boundaries.js",
    "test:unit": "bun test packages/testing/test/*.test.js",
    "test:coverage": "bun test --coverage && bun scripts/check-coverage-thresholds.js",
    "start:admin-demo": "bun apps/admin-web/src/demo-server.js",
    "lint": "bunx eslint . --max-warnings 0 --cache",
    "lint:fix": "bunx eslint . --fix --cache",
    "sonar:verify": "bun run test:coverage && test -f coverage/lcov.info && echo sonar inputs ready",
    "sonar:scan": "bunx sonar-scanner",
    "context:gutenberg": "bun scripts/check-gutenberg-context.js",
    "dev:admin": "bunx vite --config apps/admin-web/vite.config.js",
    "build:admin": "bunx vite build --config apps/admin-web/vite.config.js",
    "test:wrangler": "bun scripts/test-wrangler-local.js",
    "test:wrangler:deployed": "bun scripts/test-wrangler-deployed.js"
  },
  "module": "index.ts",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20260205.0",
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/node": "^25.2.1",
    "@vitejs/plugin-react": "^5.1.3",
    "eslint": "^9.39.2",
    "eslint-plugin-sonarjs": "^3.0.6",
    "globals": "^17.3.0",
    "sonar-scanner": "^3.1.0",
    "ts-api-utils": "^2.4.0",
    "typescript": "5.9.3",
    "vite": "^7.3.1",
    "wrangler": "^4.63.0"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@wordpress/api-fetch": "^7.39.0",
    "@wordpress/block-editor": "^15.12.0",
    "@wordpress/block-library": "^9.39.0",
    "@wordpress/blocks": "^15.12.0",
    "@wordpress/components": "^32.1.0",
    "@wordpress/data": "^10.39.0",
    "@wordpress/dom-ready": "^4.39.0",
    "@wordpress/element": "^6.39.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-native": "0.74.5",
    "react-native-web": "^0.21.2"
  }
}
